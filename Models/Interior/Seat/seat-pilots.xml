<PropertyList>

  <path>208pilotseat.ac</path>

<!-- Cold and Dark Unlighted -->

  <animation>
  <type>material</type>
    <object-name>Seat</object-name>
    <emission>
      <red>   .018 </red>
      <green> .018 </green>
      <blue>  .018 </blue>
      <factor-prop>/sim/time/sun-angle-rad</factor-prop>
    </emission>
    <condition>
      <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.55</value>
        </greater-than>
    </condition>
  </animation>

<!-- Cold and Dark Lighted -->

<!-- Instrument Lights On -->

<!-- End of Emission Animations -->

</PropertyList>

