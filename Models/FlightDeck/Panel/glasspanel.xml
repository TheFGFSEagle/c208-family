    <name>AltAirLabelText</name>
    <type type="string">literal</type>
    <text type="string">Alt Static Air</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.020</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.07</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m> 0.08</x-m>
      <y-m> -0.7 </y-m>
      <z-m> 0.04 </z-m>
    </offsets>
  </text>


  <animation>
    <type>material</type>
    <object-name>ISepLabelText</object-name>
    <object-name>AltAirLabelText</object-name>
    <emission>
      <red>0.7</red>
      <green>0.7</green>
      <blue>0.7</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ISepLabelText</object-name>
    <object-name>AltAirLabelText</object-name>
    <condition>
      <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <!-- Compartment Door -->
  <animation>
    <type>rotate</type>
    <object-name>CompartmentDoor</object-name>
    <object-name>CompartmentDoorHandle</object-name>
    <property>controls/doors/CompDoor</property>
    <factor>90</factor>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0.06601</x-m>
      <y-m>0.63925</y-m>
      <z-m>0.01476</z-m>
    </center>
  </animation>

  <!-- Pick Compartment Door Handle-->
  <animation>
    <type>pick</type>
    <object-name>CompartmentDoorHandle</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.movedoor("/controls/doors/CompDoor",1);</script>
      </binding>
    </action>
  </animation>

</PropertyList>

