<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>rpmgauge.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
  </animation>

<!-- Cold and Dark Unlighted -->

  <animation>
  <type>material</type>
    <object-name>fond</object-name>
    <emission>
      <red>   .025 </red>
      <green> .025 </green>
      <blue>  .025 </blue>
      <factor-prop>/sim/time/sun-angle-rad</factor-prop>
    </emission>
    <condition>
      <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.55</value>
        </greater-than>
    </condition>
  </animation>

<!-- Cold and Dark Lighted -->

  <animation>
  <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   .015 </red>
      <green> .015 </green>
      <blue>  .015 </blue>
      <factor-prop>/sim/time/sun-angle-rad</factor-prop>
    </emission>
    <condition>
      <and>
      <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.55</value>
        </greater-than>
        <not>
          <property>systems/electrical/on</property>
        </not>
      </and>
    </condition>
  </animation>

<!-- Instrument Lights On -->

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   0.028 </red>
      <green> 0.014 </green>
      <blue>  0.007 </blue>
      <factor-prop>controls/lighting/inst-lights-eng-bright</factor-prop>
    </emission>
  </animation>

<!-- End of Emission Animations -->

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine[0]/thruster/rpm</property>
    <factor>0.106</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

<!-- Prop RPM Guage Tooltip -->
  <animation>
    <type>pick</type>
    <object-name>face</object-name>
    <action></action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>proprpm</tooltip-id>
        <label>Prop RPM: %4.0f</label>
        <property>engines/engine[0]/thruster/rpm</property>
      </binding>
    </hovered>
  </animation>

<!-- Label Text -->

 <text>
  <name>LabelText</name>
  <type type="string">literal</type>
  <text type="string">Prop RPM</text>
  <draw-text type="bool">true</draw-text>
  <font>Helvetica.txf</font>
  <character-size type="double">0.013</character-size>
  <character-aspect-ratio type="double">1.0</character-aspect-ratio>
  <axis-alignment>yz-plane</axis-alignment>
  <max-height>0.2</max-height>
  <max-width>0.07</max-width>
  <font-resolution>
    <width type="int">32</width>
    <height type="int">32</height>
  </font-resolution>
  <alignment>center-center</alignment>
  <offsets>
    <x-m> 0.01</x-m>
    <y-m> -0.003 </y-m>
    <z-m> 0.033 </z-m>
  </offsets>
</text>

<animation>
  <type>material</type>
  <object-name>LabelText</object-name>
  <emission>
    <red>0.7</red>
    <green>0.7</green>
    <blue>0.7</blue>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>LabelText</object-name>
  <condition>
    <property>/sim/panel-hotspots</property>
  </condition>
</animation>


</PropertyList>

