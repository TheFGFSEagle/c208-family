<?xml version="1.0"?>

<!--  ##################################################################
      ####      slip.xml - ePilot                                   ####
      ####                                                          ####
      ####    Component for Custom Cessna-208B Hud display          ####
      ####    This doesnt work right at low airpseed                ####
      ####    Don't really care - leave it in                       ####
      ################################################################## -->

<PropertyList>

  <turn-bank-indicator>
    <name>Slip</name>
    <x>-30</x>
    <width>60</width>
    <height>10</height>

    <bank-input>
      <property>/orientation/roll-deg</property>
    </bank-input>

    <sideslip-input>
      <property>/orientation/side-slip-deg</property>
    </sideslip-input>

    <gap-width>5</gap-width>
    <bank-scale>true</bank-scale>
    <bank-scale-radius>250</bank-scale-radius>
  </turn-bank-indicator>

</PropertyList>
