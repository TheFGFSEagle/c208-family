<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<!--  ##################################################################
      ####      Cessna-208B-sound.xml - ePilot                      ####
      ####                                                          ####
      ####    Cessna-208B Sound fx file                             ####
      ################################################################## -->

  <fx>

    <StarterUp>
      <name>StarterStart</name>
      <path>Aircraft/Cessna-208B/Sounds/starter_start.wav</path>
      <property>/sim/sound/Starter_Up</property>
      <volume>
        <factor>0.8</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </StarterUp>

    <StarterDown>
      <name>StarterDown</name>
      <path>Aircraft/Cessna-208B/Sounds/starter_stop.wav</path>
      <property>/sim/sound/Starter_Down</property>
      <volume>
        <factor>0.8</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </StarterDown>

    <engine>
      <name>engine</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/internal.wav</path>
        <property>/engines/engine[0]/thruster/rpm</property>
      <volume>
        <factor>0.75</factor>
      </volume>
      <pitch>
        <property>/engines/engine[0]/thruster/rpm</property>
        <factor>0.00074</factor>
        <min>0.1</min>
        <max>2</max>
        <offset>-0.10</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <whine>
      <name>jetwhine</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/whine.wav</path>
      <property>/engines/engine[0]/n1</property>
      <volume>
        <factor>0.25</factor>
      </volume>
      <pitch>
        <property>/engines/engine[0]/n1</property>
        <factor>.02</factor>
        <min>0.0</min>
        <max>2.0</max>
        <offset>0</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </whine>

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/rumble.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/velocities/groundspeed-kt</property>
            <value>2</value>
          </greater-than>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
        </and>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.25</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>

    <rumble>
      <name>rattle</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/rattleroll.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/velocities/groundspeed-kt</property>
            <value>25</value>
          </greater-than>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
        </and>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.75</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>

    <squeal>
      <name>squeal</name>
      <path>Aircraft/Cessna-208B/Sounds/squeal.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/velocities/groundspeed-kt</property>
            <value>20</value>
          </greater-than>
          <or>
            <property>/gear/gear[0]/wow</property>
            <property>/gear/gear[1]/wow</property>
            <property>/gear/gear[2]/wow</property>
          </or>
        </and>
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.01</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <internal>dt_stop</internal>
        <factor>0.05</factor>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.0025</factor>
        <offset>1.2</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>

    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/Cessna-208B/Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.8</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </flap>

    <avionics>
      <name>avionics</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/fan.wav</path>
      <property>/systems/electrical/on</property>
      <volume>
        <factor>0.25</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </avionics>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/wind.wav</path>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.001</factor>
        <min>0.0</min>
        <max>0.5</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0035</factor>
        <offset>1.25</offset>
      </pitch>
      <reference-dist>60.0</reference-dist>
      <max-dist>2000.0</max-dist>
    </wind>

    <stall>
      <name>stall</name>
      <mode>looped</mode>
      <path>Sounds/stall.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/fdm/jsbsim/aero/alpha-deg</property>
            <value>12.0</value>
          </greater-than>
          <greater-than>
            <property>/velocities/airspeed-kt</property>
            <value>20</value>
          </greater-than>
        </and>
      </condition>
      <volume>
        <factor>0.7</factor>
      </volume>
      <reference-dist>60.0</reference-dist>
      <max-dist>2000.0</max-dist>
    </stall>


    <gear>
      <name>gear</name>
      <path>Aircraft/Cessna-208B/Sounds/gear2.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/gear/gear[4]/position-norm</property>
            <value>0</value>
          </greater-than>
          <less-than>
            <property>/gear/gear[4]/position-norm</property>
            <value>1</value>
          </less-than>
          <greater-than>
            <property>sim/time/elapsed-sec</property>
            <value>10</value>
          </greater-than>
          <property>/sim/model/floats</property>
        </and>
      </condition>
      <volume>
        <factor>2</factor>
      </volume>
    </gear>

    <water-rudder-ratchet>
      <name>water-rudder-ratchet</name>
      <path>Aircraft/Cessna-208B/Sounds/ratchet.wav</path>
      <condition>
          <greater-than>
            <property>controls/doors/RudderLever</property>
            <value>0.4</value>
          </greater-than>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </water-rudder-ratchet>

    <fire>
      <name>fire</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/fire.wav</path>
      <condition>
            <property>/instrumentation/annun/enginefire</property>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </fire>

    <annuntest>
      <name>annuntest</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-208B/Sounds/annuntest.wav</path>
      <condition>
            <property>/controls/switches/annunlamptest</property>
      </condition>
      <volume>
        <factor>0.6</factor>
      </volume>
    </annuntest>

    <Pilotdooropen>
      <name>dooropen</name>
      <path>Aircraft/Cessna-208B/Sounds/opendoor.wav</path>
      <condition>
          <greater-than>
            <property>controls/doors/Pilot</property>
            <value>0.0</value>
          </greater-than>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </Pilotdooropen>

    <Pilotdoorclose>
      <name>doorclose</name>
      <path>Aircraft/Cessna-208B/Sounds/closedoor.wav</path>
      <condition>
          <less-than>
            <property>controls/doors/Pilot</property>
            <value>0.05</value>
          </less-than>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </Pilotdoorclose>

    <CoPilotdooropen>
      <name>CoPilotdooropen</name>
      <path>Aircraft/Cessna-208B/Sounds/opendoor.wav</path>
      <condition>
          <greater-than>
            <property>controls/doors/CoPilot</property>
            <value>0.0</value>
          </greater-than>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </CoPilotdooropen>

    <CoPilotdoorclose>
      <name>CoPilotdoorclose</name>
      <path>Aircraft/Cessna-208B/Sounds/closedoor.wav</path>
      <condition>
          <less-than>
            <property>controls/doors/CoPilot</property>
            <value>0.05</value>
          </less-than>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </CoPilotdoorclose>

   <!-- ****************** Floats **************** -->
    <lap>
      <name>water_lap</name>
      <path>Aircraft/Cessna-208B/Sounds/Lap.wav</path>
      <mode>looped</mode>
      <condition>
        <and>
        <or>
          <greater-than>
            <property>/gear/gear[15]/compression-norm</property>
            <value>0</value>
          </greater-than>
        <greater-than>
          <property>/gear/gear[16]/compression-norm</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>/gear/gear[17]/compression-norm</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>/gear/gear[18]/compression-norm</property>
          <value>0</value>
        </greater-than>
        </or>
        <less-than>
          <property>/velocities/groundspeed-kt</property>
          <value>10</value>
        </less-than>
        </and>
      </condition>
      <volume>
        <factor>0.3</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </lap>

    <rush>
      <name>water_rush</name>
      <path>Aircraft/Cessna-208B/Sounds/Rush2.wav</path>
      <mode>looped</mode>
      <condition>
        <and>
        <or>
          <greater-than>
            <property>/gear/gear[15]/compression-norm</property>
            <value>0</value>
          </greater-than>
        <greater-than>
          <property>/gear/gear[16]/compression-norm</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>/gear/gear[17]/compression-norm</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>/gear/gear[18]/compression-norm</property>
          <value>0</value>
        </greater-than>
        </or>
        <greater-than>
          <property>/velocities/groundspeed-kt</property>
          <value>10</value>
        </greater-than>
        </and>
      </condition>
      <volume>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.02</factor>
        <offset>0.0</offset>
        <min>0.1</min>
        <max>5</max>
      </volume>
      <pitch>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.05</factor>
        <offset>1</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rush>

  <!-- Click -->

   <click>
    <name>Click</name>
    <path>Aircraft/Cessna-208B/Sounds/click.wav</path>
    <condition>
      <property>sim/sound/click</property>
    </condition>
    <volume>
      <property>sim/sound/enabled</property>
      <factor>0.5</factor>
    </volume>
  </click>

  <!-- Fuel -->

   <click>
    <name>Fuel</name>
    <path>Aircraft/Cessna-208B/Sounds/fuelvalve2.wav</path>
    <condition>
      <property>sim/sound/fuelvalve</property>
    </condition>
    <volume>
      <property>sim/sound/enabled</property>
      <factor>2</factor>
    </volume>
  </click>

  </fx>

</PropertyList>
